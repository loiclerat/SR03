<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
  PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"><hibernate-mapping>
  <class name="Utilisateur" table="Utilisateur">
    <id name="id" type="int" column="id">
      <generator class="native"/>
    </id>
    <property name="nom" type="string" not-null="false" />
    <property name="prenom" type="string" not-null="false" />
    <property name="mail" type="string" not-null="false" />
    <property name="login" type="string" not-null="false" />
    <property name="password" type="string" not-null="false" />
    <property name="adresse" type="string" not-null="false" />
    <property name="cpostal" type="string" not-null="false" />
    <property name="ville" type="string" not-null="false" />
  </class>
</hibernate-mapping>